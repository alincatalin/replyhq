{
  "name": "nightwatch",
  "version": "0.1.0",
  "description": "A macOS menu bar app that automatically detects and displays active Claude Code sessions",
  "author": "Nightwatch Team",
  "license": "MIT",
  "keywords": [
    "claude",
    "claude-code",
    "session-tracker",
    "developer-tools",
    "electron",
    "menubar",
    "macos"
  ],
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run electron:compile",
    "electron:dev": "NODE_OPTIONS='' concurrently \"vite\" \"wait-on http://localhost:5173 && NODE_OPTIONS='' electron .\"",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.nightwatch.app",
    "productName": "Nightwatch",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets/icons/build",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "dmg": {
      "title": "Nightwatch",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "extraResources": [
      {
        "from": "assets/icons/build/menubar-iconTemplate.png",
        "to": "menubar-iconTemplate.png"
      },
      {
        "from": "assets/icons/build/menubar-iconTemplate@2x.png",
        "to": "menubar-iconTemplate@2x.png"
      },
      {
        "from": "assets/hooks",
        "to": "hooks"
      }
    ]
  }
}
